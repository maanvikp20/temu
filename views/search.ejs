<div class="support-container">
  <div class="page-header">
    <h1>Search Results</h1>
    <% if (query) { %>
      <p>Found <%= resultCount %> result<%= resultCount !== 1 ? 's' : '' %> for "<%= query %>"</p>
    <% } else { %>
      <p>Enter a search term to find products</p>
    <% } %>
  </div>

  <% if (items.length > 0) { %>
    <div class="product-row">
      <% items.forEach(item => { %>
        <%- include('partials/card', { item: item }) %>
      <% }); %>
    </div>
  <% } else if (query) { %>
    <div class="about-section" style="text-align: center; margin-top: 40px;">
      <h2>No Results Found</h2>
      <p style="color: #666; margin-top: 16px;">
        We couldn't find any products matching "<%= query %>". Try different keywords or browse our categories.
      </p>
      <a href="/" style="display: inline-block; margin-top: 20px; padding: 12px 24px; background: var(--color-primary); color: white; text-decoration: none; border-radius: 8px; font-weight: 600;">Browse All Products</a>
    </div>
  <% } %>
</div>